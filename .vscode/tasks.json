{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Clean",
            "type": "shell",
            "command": "zsh",
            "args": [
                "${workspaceFolder}/scripts/clean.sh"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "echo": true
            }
        },
        {
            "label": "Build",
            "type": "shell",
            "command": "zsh",
            "args": [
                "${workspaceFolder}/scripts/build.sh"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "echo": true
            }
        }
    ]
}