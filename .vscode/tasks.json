{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake Build",
            "type": "shell",
            "command": "zsh",
            "args": [
                "${workspaceFolder}/scripts/CMakeBuild.sh"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "echo": true
            }
        },
        {
            "label": "CMake Clean",
            "type": "shell",
            "command": "zsh",
            "args": [
                "${workspaceFolder}/scripts/CMakeClean.sh"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "echo": true
            }
        },
    ]
}