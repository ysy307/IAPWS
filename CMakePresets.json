{
    "version": 6,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 25,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "base",
            "hidden": true,
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/${presetName}"
        },
        {
            "name": "gcc-base",
            "hidden": true,
            "inherits": "base",
            "cacheVariables": {
                "CMAKE_Fortran_COMPILER": "gfortran",
                "CMAKE_Fortran_FLAGS": "-Wall -Wextra -fopenmp"
            }
        },
        {
            "name": "gcc-debug",
            "displayName": "GCC Debug",
            "inherits": "gcc-base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_Fortran_FLAGS_DEBUG": "-g -O0 -fcheck=all -fbacktrace"
            }
        },
        {
            "name": "gcc-release",
            "displayName": "GCC Release",
            "inherits": "gcc-base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_Fortran_FLAGS_RELEASE": "-O3 -march=native -ffast-math"
            }
        },
        {
            "name": "intel-base",
            "hidden": true,
            "inherits": "base",
            "cacheVariables": {
                "CMAKE_Fortran_COMPILER": "ifx",
                "CMAKE_Fortran_FLAGS": "-fpp -traceback -warn all -qopenmp"
            }
        },
        {
            "name": "intel-debug",
            "displayName": "Intel Debug",
            "inherits": "intel-base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_Fortran_FLAGS_DEBUG": "-g -O0 -check all -fpe0"
            }
        },
        {
            "name": "intel-release",
            "displayName": "Intel Release",
            "inherits": "intel-base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_Fortran_FLAGS_RELEASE": "-O3 -xHost"
            }
        },
        {
            "name": "nvidia-base",
            "hidden": true,
            "inherits": "base",
            "cacheVariables": {
                "CMAKE_Fortran_COMPILER": "nvfortran",
                "CMAKE_Fortran_FLAGS": "-Minfo=all -mp"
            }
        },
        {
            "name": "nvidia-debug",
            "displayName": "NVIDIA Debug",
            "inherits": "nvidia-base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_Fortran_FLAGS_DEBUG": "-g -O0 -Mbounds -Mchkptr -traceback -Ktrap=fp"
            }
        },
        {
            "name": "nvidia-release",
            "displayName": "NVIDIA Release",
            "inherits": "nvidia-base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_Fortran_FLAGS_RELEASE": "-O3 -fast"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "build-base",
            "hidden": true,
            "jobs": 4
        },
        {
            "name": "build-gcc-debug",
            "displayName": "Build GCC [Debug]",
            "inherits": "build-base",
            "configurePreset": "gcc-debug"
        },
        {
            "name": "build-gcc-release",
            "displayName": "Build GCC [Release]",
            "inherits": "build-base",
            "configurePreset": "gcc-release"
        },
        {
            "name": "build-intel-debug",
            "displayName": "Build Intel [Debug]",
            "inherits": "build-base",
            "configurePreset": "intel-debug"
        },
        {
            "name": "build-intel-release",
            "displayName": "Build Intel [Release]",
            "inherits": "build-base",
            "configurePreset": "intel-release"
        },
        {
            "name": "build-nvidia-debug",
            "displayName": "Build NVIDIA [Debug]",
            "inherits": "build-base",
            "configurePreset": "nvidia-debug"
        },
        {
            "name": "build-nvidia-release",
            "displayName": "Build NVIDIA [Release]",
            "inherits": "build-base",
            "configurePreset": "nvidia-release"
        }
    ],
    "testPresets": [
        {
            "name": "test-base",
            "hidden": true,
            "output": {
                "verbosity": "extra"
            },
            "execution": {
                "noTestsAction": "error"
            }
        },
        {
            "name": "test-gcc-debug",
            "inherits": "test-base",
            "configurePreset": "gcc-debug"
        },
        {
            "name": "test-gcc-release",
            "inherits": "test-base",
            "configurePreset": "gcc-release"
        },
        {
            "name": "test-intel-debug",
            "inherits": "test-base",
            "configurePreset": "intel-debug"
        },
        {
            "name": "test-intel-release",
            "inherits": "test-base",
            "configurePreset": "intel-release"
        },
        {
            "name": "test-nvidia-debug",
            "inherits": "test-base",
            "configurePreset": "nvidia-debug"
        },
        {
            "name": "test-nvidia-release",
            "inherits": "test-base",
            "configurePreset": "nvidia-release"
        }
    ],
    "workflowPresets": [
        {
            "name": "workflow-gcc-debug",
            "displayName": "GCC Debug (Config > Build > Test)",
            "steps": [
                {
                    "type": "configure",
                    "name": "gcc-debug"
                },
                {
                    "type": "build",
                    "name": "build-gcc-debug"
                },
                {
                    "type": "test",
                    "name": "test-gcc-debug"
                }
            ]
        },
        {
            "name": "workflow-gcc-release",
            "displayName": "GCC Release (Config > Build > Test)",
            "steps": [
                {
                    "type": "configure",
                    "name": "gcc-release"
                },
                {
                    "type": "build",
                    "name": "build-gcc-release"
                },
                {
                    "type": "test",
                    "name": "test-gcc-release"
                }
            ]
        },
        {
            "name": "workflow-intel-debug",
            "displayName": "Intel Debug (Config > Build > Test)",
            "steps": [
                {
                    "type": "configure",
                    "name": "intel-debug"
                },
                {
                    "type": "build",
                    "name": "build-intel-debug"
                },
                {
                    "type": "test",
                    "name": "test-intel-debug"
                }
            ]
        },
        {
            "name": "workflow-intel-release",
            "displayName": "Intel Release (Config > Build > Test)",
            "steps": [
                {
                    "type": "configure",
                    "name": "intel-release"
                },
                {
                    "type": "build",
                    "name": "build-intel-release"
                },
                {
                    "type": "test",
                    "name": "test-intel-release"
                }
            ]
        },
        {
            "name": "workflow-nvidia-debug",
            "displayName": "NVIDIA Debug (Config > Build > Test)",
            "steps": [
                {
                    "type": "configure",
                    "name": "nvidia-debug"
                },
                {
                    "type": "build",
                    "name": "build-nvidia-debug"
                },
                {
                    "type": "test",
                    "name": "test-nvidia-debug"
                }
            ]
        },
        {
            "name": "workflow-nvidia-release",
            "displayName": "NVIDIA Release (Config > Build > Test)",
            "steps": [
                {
                    "type": "configure",
                    "name": "nvidia-release"
                },
                {
                    "type": "build",
                    "name": "build-nvidia-release"
                },
                {
                    "type": "test",
                    "name": "test-nvidia-release"
                }
            ]
        }
    ]
}